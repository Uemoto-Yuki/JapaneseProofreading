<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity"
    tools:showIn="@layout/back_button">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:background="#fcc800"
            android:gravity="center"
            android:padding="10dp"
            android:text="アプリ概要"
            android:textColor="#191970"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/HelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AppAbst" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fcc800"
            android:gravity="center"
            android:padding="10dp"
            android:text="使い方"
            android:textColor="#191970"
            android:textSize="18sp" />

        <ImageView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="310sp"
            android:layout_gravity="center"
            android:layout_marginVertical="0sp"
            android:layout_marginTop="10sp"
            android:scaleType="centerInside"
            android:src="@drawable/appintro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AppIntro" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fcc800"
            android:gravity="center"
            android:padding="10dp"
            android:text="訂正機能について"
            android:textColor="#191970"
            android:textSize="18sp" />

        <ImageView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="310sp"
            android:layout_gravity="center"
            android:layout_marginVertical="0sp"
            android:layout_marginTop="10sp"
            android:scaleType="centerInside"
            android:src="@drawable/suggest_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AppResult" />
    </LinearLayout>
</ScrollView>